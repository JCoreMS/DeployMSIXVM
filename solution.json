{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "metadata": {
    "_generator": {
      "name": "bicep",
      "version": "0.20.4.51522",
      "templateHash": "12177902018859008620"
    }
  },
  "parameters": {
    "adminUsername": {
      "type": "string",
      "defaultValue": "jcore",
      "metadata": {
        "description": "Username for the Virtual Machine."
      }
    },
    "adminPassword": {
      "type": "securestring",
      "minLength": 12,
      "metadata": {
        "description": "Password for the Virtual Machine."
      }
    },
    "publicIPAllowed": {
      "type": "bool",
      "defaultValue": false,
      "metadata": {
        "description": "Create the VM with a Public IP to access the Virtual Machine?"
      }
    },
    "OSoffer": {
      "type": "string",
      "metadata": {
        "description": "The Windows version for the VM."
      }
    },
    "OSVersion": {
      "type": "string",
      "defaultValue": "win11-22h2-ent",
      "metadata": {
        "description": "The Windows build version for the VM."
      }
    },
    "vmDiskType": {
      "type": "string",
      "metadata": {
        "description": "Size of the virtual machine."
      }
    },
    "vmSize": {
      "type": "string",
      "defaultValue": "Standard_D2s_v5",
      "metadata": {
        "description": "Size of the virtual machine."
      }
    },
    "location": {
      "type": "string",
      "defaultValue": "[resourceGroup().location]",
      "metadata": {
        "description": "Location for all resources."
      }
    },
    "vmName": {
      "type": "string",
      "defaultValue": "vmMSIXTools",
      "maxLength": 15,
      "metadata": {
        "description": "Name of the virtual machine. (must be 15 characters or less)"
      }
    },
    "VNet": {
      "type": "object",
      "defaultValue": {
        "name": "",
        "id": "",
        "location": "",
        "subscriptionName": ""
      },
      "metadata": {
        "description": "Virtual Network to attach MSIX Tools VM to."
      }
    },
    "SubnetName": {
      "type": "string",
      "metadata": {
        "description": "Subnet to use for MSIX VM Tools VM."
      }
    },
    "StorageAcctName": {
      "type": "string",
      "metadata": {
        "description": "Storage Account where MSIX packages where be stored for AVD. (mapped for ease of copying resulting MSIX packages)"
      }
    },
    "StorageAcctKey": {
      "type": "securestring",
      "metadata": {
        "description": "Storage Account Key used for mapping drive to MSIX Storage / share."
      }
    },
    "FileshareName": {
      "type": "string",
      "defaultValue": "msix",
      "metadata": {
        "description": "Share name for EXISTING MSIX package file share."
      }
    },
    "Timestamp": {
      "type": "string",
      "defaultValue": "[utcNow('u')]",
      "metadata": {
        "description": "Do not change. Used for deployment purposes only."
      }
    }
  },
  "variables": {
    "StorageSuffix": "[environment().suffixes.storage]"
  },
  "resources": [
    {
      "condition": "[parameters('publicIPAllowed')]",
      "type": "Microsoft.Network/publicIPAddresses",
      "apiVersion": "2022-01-01",
      "name": "[format('pip-{0}', parameters('vmName'))]",
      "location": "[parameters('location')]",
      "sku": {
        "name": "Basic"
      },
      "properties": {
        "publicIPAllocationMethod": "Dynamic"
      }
    },
    {
      "type": "Microsoft.Network/networkInterfaces",
      "apiVersion": "2022-01-01",
      "name": "[format('nic-{0}', parameters('vmName'))]",
      "location": "[parameters('location')]",
      "properties": {
        "ipConfigurations": [
          {
            "name": "ipconfig1",
            "properties": {
              "privateIPAllocationMethod": "Dynamic",
              "subnet": {
                "id": "[format('{0}/subnets/{1}', parameters('VNet').id, parameters('SubnetName'))]"
              },
              "publicIPAddress": "[if(parameters('publicIPAllowed'), createObject('id', resourceId('Microsoft.Network/publicIPAddresses', format('pip-{0}', parameters('vmName')))), null())]"
            }
          }
        ]
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/publicIPAddresses', format('pip-{0}', parameters('vmName')))]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines",
      "apiVersion": "2022-03-01",
      "name": "[parameters('vmName')]",
      "location": "[parameters('location')]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('vmSize')]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('adminUsername')]",
          "adminPassword": "[parameters('adminPassword')]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsDesktop",
            "offer": "[parameters('OSoffer')]",
            "sku": "[parameters('OSVersion')]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage",
            "managedDisk": {
              "storageAccountType": "[parameters('vmDiskType')]"
            }
          }
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces', format('nic-{0}', parameters('vmName')))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": false
          }
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Network/networkInterfaces', format('nic-{0}', parameters('vmName')))]"
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2022-03-01",
      "name": "[format('{0}/{1}', parameters('vmName'), 'VmExtension-PowerShell-CustomizeMSIXTools')]",
      "location": "[parameters('location')]",
      "properties": {
        "publisher": "Microsoft.Compute",
        "type": "CustomScriptExtension",
        "typeHandlerVersion": "1.10",
        "settings": {
          "fileUris": [
            "https://raw.githubusercontent.com/JCoreMS/DeployMSIXVM/main/Scripts/New-AzureMsixAppAttachImage.ps1"
          ],
          "timestamp": "[parameters('Timestamp')]"
        },
        "protectedSettings": {
          "commandToExecute": "[format('powershell -ExecutionPolicy Unrestricted -File New-AzureMsixAppAttachImage.ps1 -FileShareName {0} -StorageAccountKey {1} -StorageAccountName ${2} -VMUserName {3} -VMUserPassword {4} -StorageSuffix {5}', parameters('FileshareName'), parameters('StorageAcctKey'), parameters('StorageAcctName'), parameters('adminUsername'), parameters('adminPassword'), variables('StorageSuffix'))]"
        }
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', parameters('vmName'))]"
      ]
    }
  ]
}